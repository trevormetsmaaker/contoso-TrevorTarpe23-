@model IEnumerable<ContosoUniversity.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Õpilaste Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(Model => Model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.FirstMidName)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.EnrollmentDate)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstMidName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EnrollmentDate)
                </td>
                <td colspan="2">
                    <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@item.ID">Edit</a>
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.ID">Details</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ID">Delete</a>
                    <form asp-action="Clone" asp-controller="Students" method="post">
                        <input type="hidden" asp-for="@item.ID" />
                        <input type="submit" class="btn btn-warning" asp-action="Clone" value="Clone" asp-route-id="@item.ID" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>