@model ContosoUniversity.Models.Department

@{
    ViewData["Title"] = "BaseOn";
}
<h1>Edit</h1>
<h4>Department</h4>
<hr />

<div class="row">
    <div class"col-md-4">
        <form asp-action="">
            <input type="hidden" asp-for="RowVersion" value="@Html.Raw("0")" />
            <input type="hidden" asp-for="DepartmentID" value="@Model.DepartmentID" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Budget" class="control-label"></label>
                <input asp-for="Budget" class="form-control" />
                <span asp-validation-for="Budget" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InstructorID" class="control-label"></label>
                <select asp-for="InstructorID" class="form-control" asp-items="ViewBag.InstructorID">
                    <option value="">-- Select Administrator --</option>
                </select>
                <span asp-validation-for="InstructorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Make" class="btn btn-primary" formaction=@Url.Action("Create") formmethod="post" />
                <input type="submit" value="Make & Delete Old" class="btn btn-primary" formaction=@Url.Action("MakeAndDeleteOld") formmethod="post" />
                <a asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div></div>

