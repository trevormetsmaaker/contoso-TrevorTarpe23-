@model ContosoUniversity.Models.Course
@{
    ViewData["Title"] = ViewBag.Title;
}
<h2>@ViewBag.Description</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @{
                if (ViewBag.Title == "Edit")
                {
                    <input type="hidden" asp-for="CourseID" value="@Model.CourseID" />
                }
            }
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Credits" class="control-label"></label>
                <input asp-for="Credits" class="form-control" />
                <span asp-validation-for="Credits" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="@ViewBag.Title" class="btn btn-primary" />
            </div>
        </form>
        <a asp-action="Index" class="btn btn-outline-primary">Back</a>
    </div>
</div>
